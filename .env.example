# Listener
BANSHO_LISTEN_HOST=127.0.0.1
BANSHO_LISTEN_PORT=9000

# Upstream connection
# - stdio: run a local command (UPSTREAM_CMD)
# - http: forward to an upstream URL (UPSTREAM_URL)
UPSTREAM_TRANSPORT=stdio
UPSTREAM_CMD=python -m your_upstream_mcp_server
UPSTREAM_URL=http://127.0.0.1:8080/mcp

# Storage
POSTGRES_DSN=postgresql://bansho:bansho@127.0.0.1:5433/bansho
REDIS_URL=redis://127.0.0.1:6379/0
