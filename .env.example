# Listener
SENTINEL_LISTEN_HOST=127.0.0.1
SENTINEL_LISTEN_PORT=9000

# Upstream connection
# - stdio: run a local command (UPSTREAM_CMD)
# - http: forward to an upstream URL (UPSTREAM_URL)
UPSTREAM_TRANSPORT=stdio
UPSTREAM_CMD=
UPSTREAM_URL=

# Storage
POSTGRES_DSN=postgresql://sentinel:sentinel@127.0.0.1:5432/mcp_sentinel
REDIS_URL=redis://127.0.0.1:6379/0
